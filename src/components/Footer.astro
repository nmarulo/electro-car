---
import {getLangFromUrl, useTranslations} from '../i18n/utils';

const currentLocale = getLangFromUrl(Astro.url);
const t = useTranslations(currentLocale);
---

<footer class="bg-dark text-white pt-1">
  <div class="container">
    <div class="row my-5">
      <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
        <h5 class="fw-bold mb-3 border-start border-danger border-4 ps-3">ELECTRO CAR SYSTEMS</h5>
        <p>{t('footer.professional-solutions')}</p>
        <div class="social-icons d-flex mt-4">
          <a href="#"
             class="text-white me-3 btn btn-secondary"
             aria-label="Facebook">
            <i class="bi bi-facebook fs-5"></i>
          </a>
          <a href="#"
             class="text-white me-3 btn btn-secondary"
             aria-label="Instagram">
            <i class="bi bi-instagram fs-5"></i>
          </a>
          <a href="#"
             class="text-white me-3 btn btn-secondary"
             aria-label="WhatsApp">
            <i class="bi bi-whatsapp fs-5"></i>
          </a>
          <a href="#"
             class="text-white btn btn-secondary"
             aria-label="YouTube">
            <i class="bi bi-youtube fs-5"></i>
          </a>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
        <h5 class="fw-bold mb-3 border-start border-danger border-4 ps-3">{t('common.our-services')}</h5>
        <ul class="list-unstyled">
          <li class="mb-2">
            <div class="d-flex align-items-center">
              <i class="bi bi-chevron-right me-2 text-danger"></i>
              <span>{t('footer.professional-audio')}</span>
            </div>
          </li>
          <li class="mb-2">
            <div class="d-flex align-items-center">
              <i class="bi bi-chevron-right me-2 text-danger"></i>
              <span>{t('footer.electromechanics')}</span>
            </div>
          </li>
          <li class="mb-2">
            <div class="d-flex align-items-center">
              <i class="bi bi-chevron-right me-2 text-danger"></i>
              <span>{t('footer.security-systems')}</span>
            </div>
          </li>
          <li class="mb-2">
            <div class="d-flex align-items-center">
              <i class="bi bi-chevron-right me-2 text-danger"></i>
              <span>{t('footer.air-conditioning')}</span>
            </div>
          </li>
          <li>
            <div class="d-flex align-items-center">
              <i class="bi bi-chevron-right me-2 text-danger"></i>
              <span>{t('footer.customization')}</span>
            </div>
          </li>
        </ul>
      </div>
      <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
        <h5 id="contact"
            class="fw-bold mb-3 border-start border-danger border-4 ps-3">{t('common.contact-us')}</h5>
        <ul class="list-unstyled">
          <li class="mb-3">
            <div class="d-flex">
              <div class="flex-shrink-0">
                <i class="bi bi-geo-alt-fill text-danger me-2 fs-5"></i>
              </div>
              <div class="flex-grow-1 ms-2">
                <p class="mb-0">{t('footer.audio-workshop')}</p>
                <p class="mb-0 small text-light-emphasis">Calle Principal #123, Ciudad</p>
              </div>
            </div>
          </li>
          <li class="mb-3">
            <div class="d-flex">
              <div class="flex-shrink-0">
                <i class="bi bi-telephone-fill text-danger me-2 fs-5"></i>
              </div>
              <div class="flex-grow-1 ms-2">
                <a href="tel:+34786710436"
                   class="text-light text-decoration-none">786 710 43 69</a>
              </div>
            </div>
          </li>
          <li class="mb-3">
            <div class="d-flex">
              <div class="flex-shrink-0">
                <i class="bi bi-envelope-fill text-danger me-2 fs-5"></i>
              </div>
              <div class="flex-grow-1 ms-2">
                <a href="mailto:info@electrocarsystems.com"
                   class="text-light text-decoration-none">info@electrocarsystems.com</a>
              </div>
            </div>
          </li>
          <li>
            <div class="d-flex">
              <div class="flex-shrink-0">
                <i class="bi bi-clock-fill text-danger me-2 fs-5"></i>
              </div>
              <div class="flex-grow-1 ms-2">
                <p class="mb-0">{t('footer.schedule-monday-friday')}</p>
                <p class="mb-0 small text-white-50">{t('footer.schedule-saturday')}</p>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>

    <hr class="border-secondary m-0">

    <div class="row align-items-center py-3">
      <div class="col-md-6 small">
        <p class="mb-md-0">Electro Car Systems</p>
      </div>
      <div class="col-md-6 text-md-end small">
        <p class="mb-0"><span class="text-danger">nmarulo.dev</span></p>
      </div>
    </div>
  </div>
</footer>

