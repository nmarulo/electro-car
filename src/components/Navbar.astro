---
import LanguageButton from './LanguageButton.astro';
import {getLangFromUrl, useTranslations} from '../i18n/utils';
import {getRelativeLocaleUrl} from 'astro:i18n';

const currentLocale = getLangFromUrl(Astro.url);
const homeURL = getRelativeLocaleUrl(currentLocale);
const worksURL = getRelativeLocaleUrl(currentLocale, 'works');
const t = useTranslations(currentLocale);
const homeActive = Astro.url.pathname == homeURL ? 'active' : '';
const worksActive = Astro.url.pathname == worksURL ? 'active' : '';
---

<nav class="navbar navbar-expand-lg bg-dark py-3 border-bottom"
     data-bs-theme="dark">
  <div class="container">
    <a class="navbar-brand fw-bold"
       href={homeURL}>
      ELECTRO CAR SYSTEMS
    </a>
    <button class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#bs-navbar-collapse"
            aria-controls="bs-navbar-collapse"
            aria-expanded="false"
            aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end"
         id="bs-navbar-collapse">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class={`nav-link ${homeActive}`}
             aria-current="page"
             href={homeURL}>{t('navbar.home')}</a>
        </li>
        <li class="nav-item">
          <a class={`nav-link ${worksActive}`}
             href={worksURL}>{t('navbar.works')}</a>
        </li>
      </ul>
      <LanguageButton/>
    </div>
  </div>
</nav>

