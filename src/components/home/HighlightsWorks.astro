<section id="works"
         class="works-section py-5 position-relative">
  <div class="container">
    <div class="row mb-5">
      <div class="col-lg-6 mx-auto text-center">
        <span class="badge bg-danger px-3 py-2 rounded-pill mb-4">Proyectos</span>
        <h2 class="display-5 fw-bold mb-4 text-white">Trabajos finalizados</h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 text-center">
        <a href="/works"
           class="btn text-white btn-lg d-inline-flex gap-2 stretched-link"
           aria-label="Ver galería completa de trabajos">
          Ver galería
          <i class="bi bi-arrow-right"
             aria-hidden="true"></i>
        </a>
      </div>
    </div>
  </div>
