---
import {SERVICES} from '../../consts/services';
---

<section id="services"
         class="py-5 bg-dark text-white"
         data-bs-theme="dark">
  <div class="container">
    <div class="row mb-5">
      <div class="col-lg-6 mx-auto text-center">
        <span class="badge bg-danger px-3 py-2 rounded-pill mb-4">Nuestros Servicios</span>
        <h2 class="display-6 fw-bold mb-4">Soluciones Profesionales para tu Veh√≠culo</h2>
      </div>
    </div>
    <div class="row g-4">
      {
        SERVICES.map(({
          title,
          description,
          icon,
          services
        }) => (
          <div class="col-md-6">
            <div class="service-card p-4 bg-white rounded-4 shadow-sm h-100 position-relative overflow-hidden text-danger">
              <div class="service-icon mb-4 d-inline-flex align-items-center justify-content-center rounded-circle bg-danger bg-opacity-10 p-3">
                <i class={`${icon} display-6`}></i>
              </div>
              <h3 class="h4 fw-bold mb-3">{title}</h3>
              <p class="text-secondary mb-4">{description}</p>
              <ul class="list-unstyled mb-4">
                {
                  services.map((service) => (
                    <li class="mb-2">
                      <i class="bi bi-check2-circle me-2"></i>{service}
                    </li>
                  ))
                }
              </ul>
              <div class="service-hover-overlay"></div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .service-card {
    z-index: 1;
  }

  .service-icon {
    width: 80px;
    height: 80px;
  }

  .service-hover-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--secondary-color) 0%, var(--primary-color) 100%);
    opacity: 0;
    z-index: -1;
    transition: all 0.4s ease;
  }

  .service-card:hover .service-icon {
    background-color: rgba(255, 255, 255, 0.2) !important;
  }

  .service-card:hover .text-secondary,
  .service-card:hover {
    color: white !important;
  }

  .service-card:hover .text-secondary {
    opacity: .85;
  }

  .service-card:hover .service-hover-overlay {
    opacity: .90;
  }
</style>


