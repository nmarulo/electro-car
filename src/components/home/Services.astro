---
import {SERVICES} from '../../consts/services';
---

<section id="services"
         class="py-5 bg-dark text-white"
         data-bs-theme="dark">
  <div class="container">
    <div class="row mb-5">
      <div class="col-lg-6 mx-auto text-center">
        <span class="badge bg-danger px-3 py-2 rounded-pill mb-4">Nuestros Servicios</span>
        <h2 class="display-6 fw-bold mb-4">Soluciones Profesionales para tu Veh√≠culo</h2>
      </div>
    </div>
    {
      SERVICES.map(({
        title,
        description,
        icon,
        services,
        image_start,
        image_end
      }) => (
        <div class="card mb-5 service-card border-0 text-white">
          <div class="row g-0">
            {
              image_start &&
              <div class="col-md-7">
                <img src={image_start}
                     class="img-fluid rounded-2"
                     alt={description}>
              </div>
            }
            <div class="col-md-5 order-2">
              <div class="card-body p-4">
                <div class="service-icon mb-4 d-inline-flex align-items-center justify-content-center rounded-circle bg-white p-3"
                     style="--bs-bg-opacity: 0.3">
                  <i class={`${icon} display-6`}></i>
                </div>
                <h3 class="card-title">{title}</h3>
                <p class="card-text">{description}</p>
                <ul class="list-unstyled mb-0">
                  {
                    services.map((service) => (
                      <li class="mb-2">
                        <i class="bi bi-check2-circle me-1"></i>
                        <span class="text-white fw-medium">{service}</span>
                      </li>
                    ))
                  }
                </ul>
              </div>
            </div>
            {
              image_end &&
              <div class="col-md-7 order-1 order-md-3">
                <img src={image_end}
                     class="img-fluid rounded-2"
                     alt={description}>
              </div>
            }
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .service-card {
    background: linear-gradient(135deg, rgba(33, 37, 41, 0.95), rgba(220, 53, 69, 0.85));
  }

  .service-icon {
    width: 80px;
    height: 80px;
  }
</style>
