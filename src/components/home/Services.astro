---
import {SERVICES} from '../../consts/services';
---

<section id="services"
         class="py-5 bg-dark text-white"
         data-bs-theme="dark">
  <div class="container">
    <div class="row mb-5">
      <div class="col-lg-6 mx-auto text-center">
        <span class="badge bg-danger px-3 py-2 rounded-pill mb-4">Nuestros Servicios</span>
        <h2 class="display-6 fw-bold mb-4">Soluciones Profesionales para tu Veh√≠culo</h2>
      </div>
    </div>
    <div class="row g-4">
      {
        SERVICES.map(({
          title,
          description,
          icon,
          services
        }) => (
          <div class="col-md-6">
            <div class="service-card p-4 bg-white rounded-4 h-100 position-relative overflow-hidden">
              <div class="service-icon mb-4 d-inline-flex align-items-center justify-content-center rounded-circle bg-white p-3 text-white"
                   style="--bs-bg-opacity: 0.2">
                <i class={`${icon} display-6`}></i>
              </div>
              <h3 class="h4 fw-bold mb-3">{title}</h3>
              <p class="mb-4 text-white"
                 style="--bs-text-opacity: .85">{description}</p>
              <ul class="list-unstyled mb-4">
                {
                  services.map((service) => (
                    <li class="mb-2">
                      <i class="bi bi-check2-circle me-1"></i>
                      <span class="text-white"
                            style="--bs-text-opacity: .85">{service}</span>
                    </li>
                  ))
                }
              </ul>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .service-card {
    background: linear-gradient(135deg, rgba(33, 37, 41, 0.95), rgba(220, 53, 69, 0.85));
  }

  .service-icon {
    width: 80px;
    height: 80px;
  }
</style>


